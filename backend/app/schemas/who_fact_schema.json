{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://healthfactguardian.org/schemas/who-fact/v1.0.0",
  "title": "WHO Health Fact Record",
  "description": "Formal schema for WHO-verified health facts to be stored on-chain",
  "type": "object",
  "required": [
    "id",
    "claim_text",
    "verdict",
    "severity",
    "summary",
    "evidence",
    "topics",
    "issued_at",
    "last_reviewed_at",
    "version",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique WHO fact identifier",
      "pattern": "^who-[0-9]{4}-[0-9]{4}$",
      "examples": ["who-2025-0001"]
    },
    "claim_text": {
      "type": "string",
      "description": "The health claim being verified",
      "minLength": 10,
      "maxLength": 1000
    },
    "verdict": {
      "type": "string",
      "description": "Official WHO verdict on the claim",
      "enum": ["true", "false", "misleading", "unproven", "partially_true"]
    },
    "severity": {
      "type": "string",
      "description": "Public health impact severity level",
      "enum": ["low", "medium", "high", "critical"]
    },
    "summary": {
      "type": "string",
      "description": "Brief explanation of the verdict (200-500 chars)",
      "minLength": 50,
      "maxLength": 2000
    },
    "evidence": {
      "type": "array",
      "description": "Array of evidence sources with checksums",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["url", "title", "checksum", "accessed_at"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL to WHO PDF/webpage"
          },
          "title": {
            "type": "string",
            "description": "Document title"
          },
          "checksum": {
            "type": "string",
            "description": "SHA-256 hash of the referenced document",
            "pattern": "^[a-f0-9]{64}$"
          },
          "accessed_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when evidence was verified"
          }
        }
      }
    },
    "topics": {
      "type": "array",
      "description": "Health topic tags for categorization",
      "minItems": 1,
      "items": {
        "type": "string",
        "examples": ["covid-19", "vaccines", "nutrition", "cancer", "infectious-diseases"]
      }
    },
    "issued_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when fact was first issued"
    },
    "last_reviewed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of most recent review"
    },
    "version": {
      "type": "integer",
      "description": "Version number of this fact record (increments on updates)",
      "minimum": 1
    },
    "status": {
      "type": "string",
      "description": "Current lifecycle status of this fact",
      "enum": ["active", "superseded", "withdrawn"]
    }
  },
  "additionalProperties": false
}
